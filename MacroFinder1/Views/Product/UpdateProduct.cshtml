@model Product

<h2>Update Product Information:</h2>
@Model.Product_ID

@using (Html.BeginForm("UpdateProductToDatabase", "Product", "Post"))
{
    <input asp-for="Product_ID" type="hidden" value="@Model.Product_ID" />

    <label asp-for="Name" class="control-label">Name:</label>
    <br />
    <input type="text" name="Name" class="form-control" value="@Model.Name" />
    <br />

    <label asp-for="Calories" class="control-label">Calories:</label>
    <br />
    <input type="number" step="0.01" name="Calories" class="form-control" value="@Model.Calories" />
    <br />

    <label asp-for="Fat" class="control-label">Fat:</label>
    <br />
    <input type="number" step="0.01" name="Fat" class="form-control" value="@Model.Fat" />
    <br />

    <label asp-for="Carbohydrate" class="control-label">Carbohydrate:</label>
    <br />
    <input type="number" step="0.01" name="Carbohydrate" class="form-control" value="@Model.Carbohydrate" />
    <br />

    <label asp-for="Protien" class="control-label">Protien:</label>
    <br />
    <input type="number" step="0.01" name="Protien" class="form-control" value="@Model.Protien" />
    <br />
    <input type="submit" name="Submit" value="Update Product" class="btn btn-default" />
}

